{
    "name": "simple-auth0/wordpress-plugin",
    "description": "A WordPress plugin that integrates Auth0 authentication",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "auth0/auth0-php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "SimpleAuth0\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleAuth0\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
